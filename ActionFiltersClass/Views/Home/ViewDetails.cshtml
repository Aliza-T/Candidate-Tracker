@using ActionFilterClass.Data
@model Candidate
<div class="row">
    <div class="col-lg-5 col-md-offset-3">
        <div class="well">
            <div>
                <h3>Name:@Model.FirstName @Model.LastName</h3>
              <h3>Email: @Model.Email</h3>
               <h3>Phone Number: @Model.Number</h3>
                <h3>Status: @Status.Pending</h3>
                <h3>Notes</h3>
                <h4>@Model.Notes</h4>
            </div>
       
            <div><button class="btn btn-success confirmed" id="confirmed" data-button-id="@Model.Id">Confirm</button> 
                <button class="btn btn-danger"id="refused" data-refuse-id="@Model.Id">Not Interested</button>
            </div>
           
          
        </div>


    </div>
</div>

@section scripts
{
    <script src="~/Scripts/Details.Js"></script>
    }